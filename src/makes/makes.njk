{% breadcrumbs [{ label: "Home", url: "/" }, { label: "Makes" }] %}

<section class="relative overflow-hidden">
  <div class="absolute inset-0 gradient-mesh"></div>
  <div class="relative max-w-6xl mx-auto px-4 pt-12 pb-20">
    <div class="text-center mb-14">
      <h1 class="text-4xl md:text-5xl font-black text-white tracking-tight">Browse Vehicle <span class="text-gradient">Makes</span></h1>
      <p class="mt-4 text-lg text-silver-400 max-w-2xl mx-auto leading-relaxed">Explore VIN decoding, recall data, and detailed specifications for every major automaker. Select a make to view models, common issues, and ownership resources.</p>
    </div>

    {# Active Makes #}
    <div class="mb-16">
      <div class="flex items-center gap-3 mb-8">
        <div class="feature-icon w-10 h-10 rounded-xl grid place-items-center">
          <svg class="w-5 h-5 text-volt-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        </div>
        <h2 class="text-2xl font-black text-white">Active Makes</h2>
      </div>

      {# Mainstream #}
      <h3 class="text-sm font-bold text-volt-400 uppercase tracking-widest mb-4 mt-8">Mainstream</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3 mb-8">
        {% for item in makes %}
          {% if item.active and (item.type == "mainstream") %}
          <a href="/makes/{{ item.slug }}/" class="glass-card metallic-border rounded-xl p-4 card-hover carbon-panel group text-center">
            <div class="font-bold text-white group-hover:text-volt-400 transition-colors">{{ item.name }}</div>
            <div class="text-[10px] text-silver-500 mt-1">{{ item.country }}</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>

      {# Luxury #}
      <h3 class="text-sm font-bold text-volt-400 uppercase tracking-widest mb-4 mt-8">Luxury</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3 mb-8">
        {% for item in makes %}
          {% if item.active and (item.type == "luxury") %}
          <a href="/makes/{{ item.slug }}/" class="glass-card metallic-border rounded-xl p-4 card-hover carbon-panel group text-center">
            <div class="font-bold text-white group-hover:text-volt-400 transition-colors">{{ item.name }}</div>
            <div class="text-[10px] text-silver-500 mt-1">{{ item.country }}</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>

      {# Performance #}
      <h3 class="text-sm font-bold text-volt-400 uppercase tracking-widest mb-4 mt-8">Performance</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3 mb-8">
        {% for item in makes %}
          {% if item.active and (item.type == "performance") %}
          <a href="/makes/{{ item.slug }}/" class="glass-card metallic-border rounded-xl p-4 card-hover carbon-panel group text-center">
            <div class="font-bold text-white group-hover:text-volt-400 transition-colors">{{ item.name }}</div>
            <div class="text-[10px] text-silver-500 mt-1">{{ item.country }}</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>

      {# Truck #}
      <h3 class="text-sm font-bold text-volt-400 uppercase tracking-widest mb-4 mt-8">Trucks</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3 mb-8">
        {% for item in makes %}
          {% if item.active and (item.type == "truck") %}
          <a href="/makes/{{ item.slug }}/" class="glass-card metallic-border rounded-xl p-4 card-hover carbon-panel group text-center">
            <div class="font-bold text-white group-hover:text-volt-400 transition-colors">{{ item.name }}</div>
            <div class="text-[10px] text-silver-500 mt-1">{{ item.country }}</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>

      {# EV #}
      <h3 class="text-sm font-bold text-volt-400 uppercase tracking-widest mb-4 mt-8">Electric Vehicle Brands</h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
        {% for item in makes %}
          {% if item.active and (item.type == "ev") %}
          <a href="/makes/{{ item.slug }}/" class="glass-card metallic-border rounded-xl p-4 card-hover carbon-panel group text-center">
            <div class="font-bold text-white group-hover:text-volt-400 transition-colors">{{ item.name }}</div>
            <div class="text-[10px] text-silver-500 mt-1">{{ item.country }}</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {# Discontinued Makes #}
    <div class="divider mb-10"></div>
    <div>
      <div class="flex items-center gap-3 mb-8">
        <div class="feature-icon w-10 h-10 rounded-xl grid place-items-center" style="opacity:0.6">
          <svg class="w-5 h-5 text-silver-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        </div>
        <h2 class="text-2xl font-black text-silver-300">Discontinued Makes</h2>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
        {% for item in makes %}
          {% if not item.active %}
          <a href="/makes/{{ item.slug }}/" class="glass-card rounded-xl p-4 card-hover carbon-panel group text-center border border-white/[0.04]">
            <div class="font-bold text-silver-400 group-hover:text-volt-400 transition-colors">{{ item.name }}</div>
            <div class="text-[10px] text-silver-500/60 mt-1">{{ item.country }} &middot; Discontinued</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
