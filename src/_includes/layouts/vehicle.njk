---
layout: layouts/base.njk
ogType: "website"
---

{# ── Vehicle Layout — extends base with hero, specs area, sidebar, JSON-LD ── #}

{# ── Vehicle JSON-LD Schema ── #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Car",
  "name": "{{ year }} {{ make }} {{ model }}",
  "brand": {
    "@type": "Brand",
    "name": "{{ make }}"
  },
  "manufacturer": {
    "@type": "Organization",
    "name": "{{ make }}"
  },
  "model": "{{ model }}",
  "vehicleModelDate": "{{ year }}",
  {% if bodyStyle %}"bodyType": "{{ bodyStyle }}",{% endif %}
  {% if driveType %}"driveWheelConfiguration": "{{ driveType }}",{% endif %}
  {% if engineType %}"vehicleEngine": {
    "@type": "EngineSpecification",
    "name": "{{ engineType }}"
  },{% endif %}
  {% if fuelType %}"fuelType": "{{ fuelType }}",{% endif %}
  {% if transmission %}"vehicleTransmission": "{{ transmission }}",{% endif %}
  "url": "{{ 'https://www.caralpha.com' + page.url }}"
}
</script>

{# ── Breadcrumbs ── #}
<div class="max-w-6xl mx-auto px-4 pt-6">
  {% if breadcrumbs and breadcrumbs.length %}
    {% include "partials/breadcrumbs.njk" %}
  {% endif %}
</div>

{# ── Vehicle Hero ── #}
<section class="relative overflow-hidden">
  <div class="absolute inset-0 gradient-mesh"></div>
  <div class="absolute inset-0 perf-grid"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[500px] bg-volt-500/[0.03] rounded-full blur-3xl"></div>

  <div class="relative max-w-6xl mx-auto px-4 pt-8 pb-16 md:pt-12 md:pb-20">
    <div class="max-w-3xl">
      {# ── Year Badge ── #}
      {% if year %}
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-volt-500/20 bg-volt-500/[0.06] text-xs font-semibold text-volt-400 mb-6">
        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"/></svg>
        Model Year {{ year }}
      </div>
      {% endif %}

      {# ── Vehicle Title ── #}
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight leading-[1.08]">
        {% if make %}<span class="text-white">{{ make }}</span>{% endif %}
        {% if model %}<span class="text-gradient"> {{ model }}</span>{% endif %}
      </h1>

      {% if description %}
      <p class="mt-5 text-lg text-silver-400 leading-relaxed max-w-2xl">{{ description }}</p>
      {% endif %}

      {# ── Quick Stats Row ── #}
      {% if bodyStyle or driveType or fuelType or transmission %}
      <div class="mt-8 flex flex-wrap gap-3">
        {% if bodyStyle %}
        <span class="px-3.5 py-2 rounded-xl bg-white/[0.03] border border-white/[0.06] text-sm text-silver-300">
          <span class="text-silver-500 text-xs font-medium uppercase tracking-wider mr-1.5">Body</span> {{ bodyStyle }}
        </span>
        {% endif %}
        {% if driveType %}
        <span class="px-3.5 py-2 rounded-xl bg-white/[0.03] border border-white/[0.06] text-sm text-silver-300">
          <span class="text-silver-500 text-xs font-medium uppercase tracking-wider mr-1.5">Drive</span> {{ driveType }}
        </span>
        {% endif %}
        {% if fuelType %}
        <span class="px-3.5 py-2 rounded-xl bg-white/[0.03] border border-white/[0.06] text-sm text-silver-300">
          <span class="text-silver-500 text-xs font-medium uppercase tracking-wider mr-1.5">Fuel</span> {{ fuelType }}
        </span>
        {% endif %}
        {% if transmission %}
        <span class="px-3.5 py-2 rounded-xl bg-white/[0.03] border border-white/[0.06] text-sm text-silver-300">
          <span class="text-silver-500 text-xs font-medium uppercase tracking-wider mr-1.5">Trans</span> {{ transmission }}
        </span>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</section>

<div class="divider"></div>

{# ── Content + Sidebar ── #}
<div class="max-w-6xl mx-auto px-4 py-10 md:py-16">
  <div class="flex flex-col lg:flex-row gap-10">

    {# ── Main Content Area — specs, recalls, details ── #}
    <div class="flex-1 min-w-0 space-y-8">

      {# ── Specifications Card ── #}
      {% if specs and specs.length %}
      <section class="glass-card metallic-border rounded-2xl overflow-hidden carbon-panel">
        <div class="steel-header px-6 py-4 flex items-center gap-3">
          <div class="feature-icon w-10 h-10 rounded-xl grid place-items-center">
            <svg class="w-5 h-5 text-volt-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z"/></svg>
          </div>
          <h2 class="text-lg font-bold text-white">Specifications</h2>
        </div>
        <div class="px-6 py-5">
          <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3">
            {% for spec in specs %}
            <div class="p-3 rounded-xl bg-white/[0.02] border border-white/[0.05]">
              <div class="text-[10px] font-semibold text-silver-500 uppercase tracking-wider">{{ spec.label }}</div>
              <div class="font-semibold text-white mt-0.5">{{ spec.value }}</div>
            </div>
            {% endfor %}
          </div>
        </div>
      </section>
      {% endif %}

      {# ── Main Content (recalls, descriptions, etc.) ── #}
      <div class="prose-dark">
        {{ content | safe }}
      </div>
    </div>

    {# ── Sidebar — Related Vehicles + Monetization ── #}
    <aside class="w-full lg:w-80 shrink-0 space-y-6">

      {# ── Related Vehicles ── #}
      {% if relatedVehicles and relatedVehicles.length %}
        {% set vehicles = relatedVehicles %}
        {% include "partials/related-vehicles.njk" %}
      {% endif %}

      {# ── Monetization CTAs ── #}
      {% include "partials/monetization.njk" %}
    </aside>

  </div>
</div>
