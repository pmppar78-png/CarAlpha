{# ── Breadcrumb Component ── #}
{# Takes `breadcrumbs` array from front matter: [{label: "Home", url: "/"}, {label: "Makes", url: "/makes/"}, {label: "Toyota"}] #}

{% if breadcrumbs and breadcrumbs.length %}

{# ── Schema.org BreadcrumbList JSON-LD ── #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {% for item in breadcrumbs %}
    {
      "@type": "ListItem",
      "position": {{ loop.index }},
      "name": "{{ item.label }}"{% if item.url %},
      "item": "https://www.caralpha.com{{ item.url }}"{% endif %}
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>

{# ── Visual Breadcrumb Trail ── #}
<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex flex-wrap items-center gap-1.5 text-sm text-silver-400">
    {% for item in breadcrumbs %}
      {% if loop.last %}
        <li class="text-volt-400 font-medium" aria-current="page">{{ item.label }}</li>
      {% else %}
        <li>
          <a href="{{ item.url }}" class="hover:text-volt-400 transition-colors duration-200">{{ item.label }}</a>
        </li>
        <li aria-hidden="true">
          <svg class="w-3.5 h-3.5 text-silver-500/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/></svg>
        </li>
      {% endif %}
    {% endfor %}
  </ol>
</nav>

{% endif %}
