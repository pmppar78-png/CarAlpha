---
layout: layouts/base.njk
pagination:
  data: modelYears
  size: 1
  alias: entry
permalink: "/makes/{{ entry.makeSlug }}/{{ entry.slug }}/{{ entry.year }}/"
eleventyComputed:
  title: "{{ entry.year }} {{ entry.makeName }} {{ entry.name }} — VIN Decoder, Specs & Recalls"
  description: "Free VIN decoder and recall check for the {{ entry.year }} {{ entry.makeName }} {{ entry.name }}. Decode any {{ entry.year }} {{ entry.name }} VIN for full specs, safety recalls, and ownership resources."
---

{% breadcrumbs [{ label: "Home", url: "/" }, { label: "Makes", url: "/makes/" }, { label: entry.makeName, url: "/makes/" + entry.makeSlug + "/" }, { label: entry.name, url: "/makes/" + entry.makeSlug + "/" + entry.slug + "/" }, { label: entry.year | string }] %}

<section class="relative overflow-hidden">
  <div class="absolute inset-0 gradient-mesh"></div>
  <div class="relative max-w-5xl mx-auto px-4 pt-12 pb-20">

    {# Year Model Header #}
    <div class="glass-card metallic-border rounded-2xl overflow-hidden glow-cyan-sm carbon-panel mb-10">
      <div class="steel-header px-8 py-5">
        <h1 class="text-3xl md:text-4xl font-black text-white"><span class="text-gradient">{{ entry.year }}</span> {{ entry.makeName }} {{ entry.name }}</h1>
        <div class="flex items-center gap-4 mt-2 text-sm text-silver-400">
          <span>{{ entry.bodyType }}</span>
          <span>&middot;</span>
          <span>Model Year {{ entry.year }}</span>
        </div>
      </div>
      <div class="px-8 py-6">
        <p class="text-silver-400 leading-relaxed">The {{ entry.year }} {{ entry.makeName }} {{ entry.name }} is a {{ entry.bodyType | lower }} from {{ entry.makeName }}. Use the VIN decoder below to look up full specifications, safety ratings, and open recalls for any {{ entry.year }} {{ entry.name }}. Whether you're buying, selling, or maintaining a {{ entry.year }} {{ entry.name }}, a VIN check reveals the complete vehicle history.</p>
      </div>
    </div>

    {# Year Context Info #}
    <div class="grid sm:grid-cols-3 gap-4 mb-10">
      <div class="glass-card metallic-border rounded-xl p-5 text-center carbon-panel">
        <div class="text-2xl font-black text-volt-400">{{ entry.year }}</div>
        <div class="text-xs text-silver-400 mt-1">Model Year</div>
      </div>
      <div class="glass-card metallic-border rounded-xl p-5 text-center carbon-panel">
        <div class="text-2xl font-black text-volt-400">{{ entry.makeName }}</div>
        <div class="text-xs text-silver-400 mt-1">Manufacturer</div>
      </div>
      <div class="glass-card metallic-border rounded-xl p-5 text-center carbon-panel">
        <div class="text-2xl font-black text-volt-400">{{ entry.bodyType }}</div>
        <div class="text-xs text-silver-400 mt-1">Body Style</div>
      </div>
    </div>

    {# VIN Decoder #}
    <div class="mb-12">
      <h2 class="text-xl font-black text-white mb-6">Decode a {{ entry.year }} {{ entry.makeName }} {{ entry.name }} VIN</h2>
      <div class="vin-card glass-card rounded-2xl p-6 glow-cyan carbon-panel">
        <label class="block text-sm font-bold text-silver-300 mb-3 tracking-wide uppercase">Enter VIN</label>
        <div class="flex flex-col sm:flex-row gap-3">
          <input id="vinInput" maxlength="17" placeholder="Enter 17-character VIN" class="flex-1 px-5 py-4 rounded-xl input-premium text-white placeholder-silver-500 text-base font-mono tracking-wider" />
          <button id="runBtn" class="px-8 py-4 rounded-xl btn-primary text-white font-bold text-base whitespace-nowrap">Decode</button>
        </div>
      </div>
      <section class="mt-6 space-y-5">
        <div class="hidden" id="loading"><div class="glass-card rounded-2xl p-6 border-glow text-center carbon-panel"><div class="inline-flex items-center gap-3 text-silver-300"><svg class="animate-spin w-5 h-5 text-volt-400" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path></svg>Decoding...</div></div></div>
        <div class="hidden" id="errorBox"><div class="p-5 rounded-2xl border border-red-500/30 bg-red-500/10 text-red-300" id="errorText"></div></div>
        <div class="hidden" id="vehicleCard"></div>
        <div class="hidden" id="recallCard"></div>
      </section>
    </div>

    {# Recalls Section #}
    <div class="glass-card metallic-border rounded-2xl overflow-hidden carbon-panel mb-10">
      <div class="steel-header px-6 py-4">
        <h2 class="font-bold text-white text-lg">{{ entry.year }} {{ entry.makeName }} {{ entry.name }} Recalls</h2>
      </div>
      <div class="px-6 py-5 text-sm text-silver-400 leading-relaxed">
        <p>Safety recalls for the {{ entry.year }} {{ entry.makeName }} {{ entry.name }} are issued by NHTSA when a safety-related defect is discovered. Common recall categories include airbag systems, engine components, electrical systems, and brake assemblies. All recall repairs are performed free of charge at authorized {{ entry.makeName }} dealerships regardless of mileage.</p>
        <p class="mt-3">Enter your specific VIN above to check for open recalls on your {{ entry.year }} {{ entry.name }}, or visit our <a href="/recall-checker/" class="text-volt-400 hover:underline">Recall Checker</a> tool.</p>
      </div>
    </div>

    {# Ownership CTAs #}
    <div class="mb-10">
      <h2 class="text-xl font-black text-white mb-6">{{ entry.year }} {{ entry.makeName }} {{ entry.name }} Ownership Resources</h2>
      <div class="grid sm:grid-cols-2 gap-4">
        <div class="glass-card metallic-border rounded-xl p-5 carbon-panel">
          <h3 class="font-bold text-white text-sm mb-2">Insurance</h3>
          <p class="text-xs text-silver-400 leading-relaxed">Compare insurance rates for the {{ entry.year }} {{ entry.makeName }} {{ entry.name }} from top carriers. Your {{ entry.year }} model year, trim level, and safety features all affect your premium.</p>
        </div>
        <div class="glass-card metallic-border rounded-xl p-5 carbon-panel">
          <h3 class="font-bold text-white text-sm mb-2">Warranty</h3>
          <p class="text-xs text-silver-400 leading-relaxed">Extended warranty plans can protect your {{ entry.year }} {{ entry.name }} against costly repairs{% if entry.year < 2022 %}, especially as the factory warranty has likely expired{% endif %}. Coverage typically includes powertrain and major electrical components.</p>
        </div>
        <div class="glass-card metallic-border rounded-xl p-5 carbon-panel">
          <h3 class="font-bold text-white text-sm mb-2">Financing</h3>
          <p class="text-xs text-silver-400 leading-relaxed">{% if entry.year >= 2024 %}Pre-qualify for new auto loan offers for the {{ entry.year }} {{ entry.makeName }} {{ entry.name }}. Newer model years typically qualify for the lowest APR rates.{% else %}Explore refinancing options for your {{ entry.year }} {{ entry.makeName }} {{ entry.name }}. Refinancing could lower your monthly payment or reduce your interest rate.{% endif %}</p>
        </div>
        <div class="glass-card metallic-border rounded-xl p-5 carbon-panel">
          <h3 class="font-bold text-white text-sm mb-2">Selling</h3>
          <p class="text-xs text-silver-400 leading-relaxed">Get instant offer quotes for your {{ entry.year }} {{ entry.makeName }} {{ entry.name }} from multiple buyers. Online platforms often beat dealer trade-in values by 10–20%.</p>
        </div>
      </div>
    </div>

    {# Browse Other Years #}
    <div class="mb-10">
      <h2 class="text-xl font-black text-white mb-6">Other {{ entry.makeName }} {{ entry.name }} Model Years</h2>
      <div class="grid grid-cols-3 sm:grid-cols-5 md:grid-cols-8 gap-2">
        {% for yr in modelYears %}
          {% if yr.makeSlug == entry.makeSlug and yr.slug == entry.slug and yr.year != entry.year %}
          <a href="/makes/{{ yr.makeSlug }}/{{ yr.slug }}/{{ yr.year }}/" class="glass-card metallic-border rounded-lg p-2 card-hover carbon-panel group text-center">
            <div class="font-bold text-white group-hover:text-volt-400 transition-colors text-sm">{{ yr.year }}</div>
          </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {# Back to Model #}
    <div class="text-center">
      <a href="/makes/{{ entry.makeSlug }}/{{ entry.slug }}/" class="inline-flex items-center gap-2 btn-ghost px-6 py-3 rounded-xl text-silver-300 hover:text-white text-sm font-medium">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/></svg>
        All {{ entry.makeName }} {{ entry.name }} Years
      </a>
    </div>
  </div>
</section>

<script>
(function(){
  var vinInput=document.getElementById('vinInput'),runBtn=document.getElementById('runBtn'),loading=document.getElementById('loading'),errorBox=document.getElementById('errorBox'),errorText=document.getElementById('errorText'),vehicleCard=document.getElementById('vehicleCard'),recallCard=document.getElementById('recallCard');
  if(!vinInput||!runBtn)return;
  function setLoading(on){loading.classList.toggle('hidden',!on);}
  function setError(msg){if(!msg){errorBox.classList.add('hidden');return;}errorText.textContent=msg;errorBox.classList.remove('hidden');}
  function fetchJSON(url,ms){var c=new AbortController();var t=setTimeout(function(){c.abort();},ms||12000);return fetch(url,{signal:c.signal}).then(function(r){if(!r.ok)throw new Error('HTTP '+r.status);return r.json();}).finally(function(){clearTimeout(t);});}
  async function run(){
    setError();vehicleCard.classList.add('hidden');recallCard.classList.add('hidden');
    var vin=(vinInput.value||'').trim().toUpperCase();
    if(vin.length!==17){setError('Please enter a valid 17-character VIN.');return;}
    setLoading(true);
    try{
      var d=await fetchJSON('https://vpic.nhtsa.dot.gov/api/vehicles/DecodeVinValuesExtended/'+vin+'?format=json');
      var dec=(d.Results&&d.Results[0])||{};
      var f=[['Year',dec.ModelYear],['Make',dec.Make],['Model',dec.Model],['Trim',dec.Trim],['Engine',((dec.DisplacementL||'')+'L '+(dec.FuelTypePrimary||'')).trim()],['Body',dec.BodyClass],['Drive',dec.DriveType]].filter(function(x){return x[1]&&String(x[1]).trim()!=='';});
      vehicleCard.innerHTML='<div class="glass-card metallic-border rounded-2xl overflow-hidden glow-cyan-sm animate-in carbon-panel"><div class="steel-header px-6 py-4"><h3 class="text-lg font-bold text-white">Vehicle Specs</h3></div><div class="px-6 py-5"><div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3">'+f.map(function(x){return '<div class="p-3 rounded-xl bg-white/[0.02] border border-white/[0.05]"><div class="text-[10px] font-semibold text-silver-500 uppercase">'+x[0]+'</div><div class="font-semibold text-white mt-0.5">'+x[1]+'</div></div>';}).join('')+'</div></div></div>';
      vehicleCard.classList.remove('hidden');
      try{var mk=encodeURIComponent(dec.Make||''),md=encodeURIComponent(dec.Model||''),yr=encodeURIComponent(dec.ModelYear||'');if(mk&&md&&yr){var r=await fetchJSON('https://api.nhtsa.gov/recalls/recallsByVehicle?make='+mk+'&model='+md+'&modelYear='+yr);var cnt=(r&&r.results)?r.results.length:0;recallCard.innerHTML='<div class="glass-card metallic-border rounded-2xl p-6 animate-in carbon-panel"><div class="flex items-center gap-2 '+(cnt>0?'text-amber-300':'text-emerald-400')+' text-sm font-bold">'+(cnt>0?cnt+' recall(s) found. <a href="/recall-checker/" class="underline ml-1">View details</a>':'No open recalls found.')+'</div></div>';recallCard.classList.remove('hidden');}}catch(e){}
    }catch(e){setError('Service unavailable. Try again shortly.');}finally{setLoading(false);}
  }
  runBtn.addEventListener('click',run);vinInput.addEventListener('keydown',function(e){if(e.key==='Enter')run();});
})();
</script>
